{
  "name": "energy-dashboard",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "wattpm dev",
    "start": "wattpm start",
    "build": "wattpm build",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:coverage": "c8 --all --include='web/api/**/*.js' --include='runtime-plugins/mongodb.js' --include='runtime-plugins/questdb.js' --exclude='**/*.test.js' --exclude='**/test/**' --exclude='e2e/**' --exclude='web/frontend/**' --exclude='runtime-plugins/home-assistant.js' --reporter=json --reporter=lcov --reporter=text --reports-directory=./coverage/e2e wattpm dev",
    "test:coverage:merge": "vitest run --coverage --run --reporter=lcovonly"
  },
  "dependencies": {
    "@questdb/nodejs-client": "^4.2.0",
    "fastify-plugin": "^5.1.0",
    "mongodb": "^7.0.0",
    "wattpm": "^3.29.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.16",
    "c8": "^10.1.3",
    "vitest": "^4.0.16",
    "ws": "^8.18.3"
  }
}
