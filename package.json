{
  "name": "energy-dashboard",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "wattpm dev",
    "start": "wattpm start",
    "build": "wattpm build",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:coverage:server": "NODE_V8_COVERAGE=coverage/e2e/v8 node node_modules/wattpm/bin/cli.js dev",
    "test:e2e:coverage:report": "c8 report --temp-directory=coverage/e2e/v8 --include='web/api/**/*.js' --include='runtime-plugins/mongodb.js' --include='runtime-plugins/questdb.js' --exclude='**/*.test.js' --exclude='**/node_modules/**' --exclude='**/test/**' --exclude='e2e/**' --exclude='web/frontend/**' --exclude='runtime-plugins/home-assistant.js' --reporter=lcov --reporter=text --report-dir=coverage/e2e",
    "test:coverage:merge": "cat coverage/lcov.info coverage/e2e/lcov.info > coverage/merged-lcov.info && mv coverage/merged-lcov.info coverage/lcov.info"
  },
  "dependencies": {
    "@questdb/nodejs-client": "^4.2.0",
    "fastify-plugin": "^5.1.0",
    "mongodb": "^7.0.0",
    "wattpm": "^3.29.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.16",
    "c8": "^10.1.3",
    "vitest": "^4.0.16",
    "ws": "^8.18.3"
  }
}
